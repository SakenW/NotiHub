# NotiHub Environment Variables

# Server Configuration
NOTIHUB_MODE=local                    # 'local' | 'cloud'
NOTIHUB_PORT=3000
NOTIHUB_HOST=0.0.0.0

# Authentication
NOTIHUB_AUTH_TOKEN=                   # Auto-generated if not provided
NOTIHUB_JWT_SECRET=                   # For cloud mode

# Database (Cloud Mode)
DATABASE_TYPE=sqlite                  # 'sqlite' | 'postgres' | 'mysql'
DATABASE_URL=                         # postgresql://user:pass@host/db
DATABASE_PATH=~/.notihub/data.db      # SQLite path (local mode)

# Cache
CACHE_TYPE=memory                     # 'memory' | 'redis'
REDIS_URL=                            # redis://host:port (if using Redis)

# Logging
LOG_LEVEL=info                        # 'debug' | 'info' | 'warn' | 'error'
LOG_FILE=~/.notihub/logs/app.log

# Feature Flags
ENABLE_WEB_DASHBOARD=true
ENABLE_SSE=true
ENABLE_STORAGE=true

# Channels (Optional - can be set in config.yaml instead)
FEISHU_WEBHOOK=
FEISHU_SECRET=
SLACK_WEBHOOK=
DINGTALK_WEBHOOK=
DINGTALK_SECRET=

# Policies
DEDUP_ENABLED=true
DEDUP_TTL=60
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_PER_MINUTE=10
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=3
