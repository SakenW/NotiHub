{
  "name": "@notihub/cli",
  "version": "0.1.0",
  "description": "Universal notification hub - send structured events to Feishu/Slack/Telegram",
  "main": "dist/index.js",
  "bin": {
    "notihub": "./dist/cli/index.js"
  },
  "type": "module",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli/index.js",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "notification",
    "feishu",
    "slack",
    "telegram",
    "cli",
    "webhook",
    "alerts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^4.26.0",
    "inquirer": "^9.2.0",
    "lru-cache": "^10.2.0",
    "nanoid": "^5.0.0",
    "ora": "^8.0.0",
    "pino": "^8.19.0",
    "yaml": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
